/* pages/index/index.wxss */

.container {
  padding: 24rpx 20rpx;
  height: 100vh;
}

/* -- Back to top -- */
.back-top {
  position: fixed;
  right: 40rpx;
  bottom: 80rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(0,113,227,0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.2);
  opacity: 0;
  transform: scale(0.6);
  transition: opacity 0.25s, transform 0.25s;
  pointer-events: none;
  z-index: 100;
}
.back-top.visible {
  opacity: 1;
  transform: scale(1);
  pointer-events: auto;
}
.back-top-arrow {
  color: #fff;
  font-size: 36rpx;
  font-weight: 700;
  line-height: 1;
}

/* -- Loading -- */
.loading {
  text-align: center;
  padding: 160rpx 0;
  color: #6e6e73;
  font-size: 28rpx;
}
.spinner {
  width: 56rpx;
  height: 56rpx;
  border: 4rpx solid #d2d2d7;
  border-top-color: #0071e3;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin: 0 auto 24rpx;
}
.spinner.small {
  width: 36rpx;
  height: 36rpx;
  border-width: 3rpx;
  margin-bottom: 12rpx;
}
@keyframes spin { to { transform: rotate(360deg); } }
.error-text { color: #e53935; }

/* -- Filter Panel -- */
.filter-panel {
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.08), 0 2rpx 4rpx rgba(0,0,0,0.06);
  padding: 28rpx 24rpx;
  margin-bottom: 24rpx;
}

.filter-row {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
  gap: 16rpx;
}
.filter-row:last-child { margin-bottom: 0; }

.filter-label {
  flex-shrink: 0;
  width: 80rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #6e6e73;
  padding-top: 10rpx;
  text-align: right;
}

.filter-body { flex: 1; }

/* -- Chips -- */
.chips {
  display: flex;
  flex-wrap: wrap;
  gap: 14rpx;
}

.chip {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 24rpx;
  border-radius: 36rpx;
  font-size: 26rpx;
  border: 2rpx solid #d2d2d7;
  background: #ffffff;
  color: #1d1d1f;
  transition: all 0.15s ease;
}

/* wuxing active colors */
.chip.wuxing-jin.active { background: #C9A96E; color: #fff; border-color: #C9A96E; }
.chip.wuxing-mu.active { background: #4CAF50; color: #fff; border-color: #4CAF50; }
.chip.wuxing-shui.active { background: #2196F3; color: #fff; border-color: #2196F3; }
.chip.wuxing-huo.active { background: #e53935; color: #fff; border-color: #e53935; }
.chip.wuxing-tu.active { background: #8D6E63; color: #fff; border-color: #8D6E63; }

.chip.struct-chip.active {
  background: #0071e3;
  color: #fff;
  border-color: #0071e3;
}
.chip.tone-chip.active {
  background: #ff6f00;
  color: #fff;
  border-color: #ff6f00;
}
.chip.common-chip.active {
  background: #00897b;
  color: #fff;
  border-color: #00897b;
}
.chip.lucky-chip.active {
  background: #e65100;
  color: #fff;
  border-color: #e65100;
}

/* -- Inputs -- */
.range-inputs {
  display: flex;
  align-items: center;
  gap: 12rpx;
}
.num-input {
  width: 120rpx;
  padding: 8rpx 16rpx;
  border: 2rpx solid #d2d2d7;
  border-radius: 12rpx;
  font-size: 26rpx;
  text-align: center;
}
.range-sep {
  color: #6e6e73;
  font-size: 26rpx;
}

.text-input {
  padding: 8rpx 20rpx;
  border: 2rpx solid #d2d2d7;
  border-radius: 12rpx;
  font-size: 26rpx;
  width: 100%;
}

.picker-input {
  padding: 8rpx 20rpx;
  border: 2rpx solid #d2d2d7;
  border-radius: 12rpx;
  font-size: 26rpx;
  min-width: 240rpx;
  display: inline-block;
}
.picker-text {
  color: #1d1d1f;
  font-size: 26rpx;
}

/* -- Actions -- */
.actions {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  flex-wrap: wrap;
  gap: 16rpx;
}

.result-info {
  font-size: 26rpx;
  color: #6e6e73;
}
.result-count {
  color: #1d1d1f;
  font-size: 40rpx;
  font-weight: 700;
}

.btn {
  padding: 12rpx 32rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
}
.btn-reset {
  background: #f0f0f0;
  color: #1d1d1f;
}

/* -- Results -- */
.stroke-group {
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.08), 0 2rpx 4rpx rgba(0,0,0,0.06);
  margin-bottom: 16rpx;
  overflow: hidden;
}

.stroke-header {
  padding: 20rpx 28rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 12rpx;
}
.stroke-header .arrow {
  display: inline-block;
  transition: transform 0.2s;
  font-size: 22rpx;
  color: #6e6e73;
}
.stroke-header.collapsed .arrow { transform: rotate(-90deg); }
.stroke-header .count {
  color: #6e6e73;
  font-weight: 400;
  font-size: 24rpx;
}

.stroke-chars {
  display: flex;
  flex-wrap: wrap;
  border-top: 1rpx solid #f0f0f2;
}

.char-card {
  width: 25%;
  box-sizing: border-box;
  background: #ffffff;
  padding: 16rpx 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  border-bottom: 1rpx solid #f0f0f2;
  border-right: 1rpx solid #f0f0f2;
}

.char-text {
  font-size: 52rpx;
  font-weight: 300;
  line-height: 1.2;
}
.char-pinyin {
  font-size: 22rpx;
  color: #6e6e73;
}
.char-meta {
  display: flex;
  gap: 6rpx;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 4rpx;
}
.tag {
  font-size: 18rpx;
  padding: 2rpx 10rpx;
  border-radius: 6rpx;
  line-height: 1.5;
}
.tag-wuxing {
  color: #fff;
  font-weight: 500;
}
.tag-wuxing-jin { background: #C9A96E; }
.tag-wuxing-mu { background: #4CAF50; }
.tag-wuxing-shui { background: #2196F3; }
.tag-wuxing-huo { background: #e53935; }
.tag-wuxing-tu { background: #8D6E63; }
.tag-radical {
  background: #e8eaf6;
  color: #3949ab;
}
.tag-struct {
  background: #f3e5f5;
  color: #7b1fa2;
}

.no-results {
  text-align: center;
  padding: 100rpx 0;
  color: #6e6e73;
  font-size: 28rpx;
}
.hint-icon {
  display: block;
  font-size: 56rpx;
  margin-bottom: 16rpx;
}

.load-more {
  text-align: center;
  padding: 20rpx 0;
  margin-bottom: 16rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.08);
  color: #0071e3;
  font-size: 28rpx;
  font-weight: 500;
}

.footer {
  text-align: center;
  padding: 32rpx 0 48rpx;
}
.footer-text {
  color: #aeaeb2;
  font-size: 22rpx;
}
